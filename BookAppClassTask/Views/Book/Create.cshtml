@model BookAppClassTask.Models.Book
@{
    ViewData["Title"] = "Add a New Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Book" asp-action="Create" method="post" class="mt-3">
    <label asp-for="BookTitle" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="BookTitle" class="form-control" placeholder="Book Title" />
    </div>
    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Price" class="form-control" placeholder="Book Price" />
    </div>
    <label asp-for="PublisherId" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="PublisherId" class="form-control" placeholder="PublisherId" />
    </div>
    <label asp-for="DateOfPublishing" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="DateOfPublishing" class="form-control" placeholder="Publishe Date" />
    </div>
</form>


