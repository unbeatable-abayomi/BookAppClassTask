@model BookAppClassTask.Models.Author
@{
    ViewData["Title"] = "Add new Author";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<h3>@ViewData["Title"]</h3>

<form asp-controller="Author" asp-action="Create" method="post" class="mt-3">
    <label asp-for="AuthorName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="AuthorName" class="form-control" placeholder="AuthorName" />
    </div>
    <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Phone" class="form-control" placeholder="Phone" />
    </div>
    <label asp-for="City" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="City" class="form-control" placeholder="City" />
    </div>
    <label asp-for="Address" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Address" class="form-control" placeholder="Address" />
    </div>

    <label asp-for="State" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<State>()"></select>

    </div>
    <label asp-for="Sex" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        @foreach (var sex in Model.AllSex)
        {
            <label class="radio-inline">
                <input type="radio" asp-for="Sex" value="@sex" id="Sex@(sex)" />@sex
            </label>

        }

    </div>
</form>


